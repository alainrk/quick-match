{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"algorithm": {
			"type": "string",
			"default": "dice",
			"enum": ["dice", "levenshtein"]
		},
		"enableStemming": {
			"type": "boolean",
			"default": true
		},
		"numbers": {
			"type": "object",
			"default": {
              "enableDigits": true,
              "enableCardinals": true,
              "enableOrdinals": true,
              "maxDigit": 10,
              "maxWordsEnablingNumbers": 2,
              "cardinals": ["one", "two", "three", "four", "five", "six", "seven", "eigth", "nine", "ten"],
              "ordinals": ["first", "second", "third", "fourth", "fifth", "sixth", "seventh", "eighth", "ninth", "tenth"]
            },
            "properties": {
              "enableDigits": {
                "type": "boolean",
                "default": true
              },
              "enableCardinals": {
                "type": "boolean",
                "default": true
              },
              "enableOrdinals": { 
                "type": "boolean",
                "default": true
              },
              "maxDigit": {
                "type": "number",
                "default": 10
              },
              "maxWordsEnablingNumbers": {
                "type": "number",
                "default": 2
              },
              "cardinals": {
                "type": "array",
                "items": { "type": "string" },
                "default": ["one", "two", "three", "four", "five", "six", "seven", "eigth", "nine", "ten"]
              },
              "ordinals": {
                "type": "array",
                "items": { "type": "string" },
                "default": ["first", "second", "third", "fourth", "fifth", "sixth", "seventh", "eighth", "ninth", "tenth"]
              }
            }
		},
		"stemming": {
			"type": "object",
            "default": { "language": "en", "minPreStemmingLength": 4, "minPostStemmingLength": 4 },
			"properties": {
				"language": {
					"type": "string",
					"default": "en"
				},
				"minPreStemmingLength": {
					"type": "number",
					"default": 4,
					"minimum": 1
				},
				"minPostStemmingLength": {
					"type": "number",
					"default": 4,
					"minimum": 1
				}
			}
		},
		"limits": {
			"type": "object",
            "default": { "minLengthCandidate": 3, "maxCandidateWords": 5 },
			"properties": {
				"minLengthCandidate": {
					"type": "number",
					"default": 3,
					"minimum": 1
				},
				"maxCandidateWords": {
					"type": "number",
					"default": 5,
					"minimum": 1
				}
			}
		},
		"weightIntersectionMultiplier": {
			"type": "number",
			"default": 1
		}
	}
}
